<style>
@keyframes wave {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes waveFlow {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

#dynamicNavbar {
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 25%, #0f4c75 50%, #3282b8 75%, #1e3c72 100%);
  background-size: 400% 400%;
  animation: wave 8s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

#dynamicNavbar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
  animation: waveFlow 3s linear infinite;
  pointer-events: none;
}

#dynamicNavbar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(76, 172, 254, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(0, 242, 254, 0.3) 0%, transparent 50%);
  animation: wave 12s ease-in-out infinite reverse;
  pointer-events: none;
}
</style>

<script>
// Enhanced scroll effects with blue wave theme
const navbar = document.getElementById('dynamicNavbar');
let scrollTimeout;

// Change blur and wave intensity on scroll
window.addEventListener('scroll', () => {
  const scrollY = window.scrollY;
  
  // Clear existing timeout
  clearTimeout(scrollTimeout);
  
  // Enhance blur effect on scroll
  if (scrollY > 50) {
    navbar.style.backdropFilter = 'blur(20px)';
    navbar.style.boxShadow = '0 4px 30px rgba(30, 60, 114, 0.3)';
    // Speed up wave animation on scroll
    navbar.style.animationDuration = '4s';
  } else {
    navbar.style.backdropFilter = 'blur(10px)';
    navbar.style.boxShadow = '0 2px 20px rgba(0,0,0,0.1)';
    // Normal wave speed
    navbar.style.animationDuration = '8s';
  }
  
  // Reset animation speed after scrolling stops
  scrollTimeout = setTimeout(() => {
    navbar.style.animationDuration = '8s';
  }, 150);
});

// Smooth navbar collapse on mobile
const navbarToggler = document.querySelector('.navbar-toggler');
const navbarCollapse = document.querySelector('.navbar-collapse');

if (navbarToggler && navbarCollapse) {
  navbarToggler.addEventListener('click', () => {
    navbarCollapse.style.transition = 'all 0.3s ease';
  });
}

// Add hover effect to navbar brand
const navbarBrand = document.querySelector('.navbar-brand');
if (navbarBrand) {
  navbarBrand.addEventListener('mouseenter', () => {
    navbarBrand.style.transform = 'scale(1.05)';
  });
  navbarBrand.addEventListener('mouseleave', () => {
    navbarBrand.style.transform = 'scale(1)';
  });
}

// Add wave ripple effect on navbar click
navbar.addEventListener('click', (e) => {
  const ripple = document.createElement('div');
  const rect = navbar.getBoundingClientRect();
  const size = 60;
  const x = e.clientX - rect.left - size / 2;
  const y = e.clientY - rect.top - size / 2;
  
  ripple.style.cssText = `
    position: absolute;
    width: ${size}px;
    height: ${size}px;
    background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
    border-radius: 50%;
    transform: scale(0);
    animation: ripple 0.6s linear;
    left: ${x}px;
    top: ${y}px;
    pointer-events: none;
    z-index: 1000;
  `;
  
  navbar.style.position = 'relative';
  navbar.appendChild(ripple);
  
  // Create ripple animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes ripple {
      to {
        transform: scale(4);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);
  
  setTimeout(() => {
    ripple.remove();
    style.remove();
  }, 600);
});
</script>